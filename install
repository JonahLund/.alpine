#!/bin/sh

# Exit on any error
set -e

# Check if sudo is available
command -v sudo > /dev/null 2>&1 || { echo >&2 "The script requires 'sudo' but it's not installed.  Aborting."; exit 1; }

# Update and upgrade packages
sudo apk update && sudo apk upgrade

# Function to add a user to groups if not already added
add_user_to_group() {
    for group in "$@"; do
        sudo adduser $USER $group
    done
}

# Install Development Essentials
sudo apk add \
    build-base \
    cmake \
    openssl-dev \
    python3 \
    curl \
    wget \
    tar \
    git \
    fontconfig-dev

# Install XCB-related packages
sudo apk add \
    xcb-util-dev \
    xcb-util-renderutil-dev \
    xcb-util-image-dev

# Install Audio/Video related packages
sudo apk add \
    pulseaudio \
    linux-firmware-amdgpu \
    mesa \
    mesa-dri-gallium \
    mesa-va-gallium

# Install Wayland/Sway related packages
sudo apk add \
    wayland \
    xwayland \
    wl-clipboard \
    sway \
    swaylock \
    swaybg \
    swayidle \
    udev \
    dbus \
    seatd \
    cmd:seatd-launch

# Install Developer tools
sudo apk add \
    neovim \
    ripgrep \
    mprocs \
    rustup \
    nodejs \
    yarn \
    npm \
    lua-language-server \
    stylua \
    docker \
    docker-cli-compose

# Install Applications
sudo apk add \
    firefox-developer-edition \
    ncspot \
    alacritty \
    tmux \
    font-jetbrains-mono-nerd

# Install node packages
yarn global add typescript typescript-language-server

# Install rust
rustup-init -y --profile minimal --default-toolchain nightly 
source "$HOME/.alpine/dotfiles/.profile"

# Install cargo binaries
cargo install kickoff ncspot cargo-leptos --locked

# Setup services
echo amdgpu | sudo tee -a /etc/modules
echo fbcon | sudo tee -a /etc/modules
sudo setup-devd udev
echo $(sudo dbus-uuidgen) | sudo tee /var/lib/dbus/machine-id >/dev/null
sudo rc-update add dbus
sudo rc-update add seatd default

# Add user to groups
add_user_to_group input video seat
